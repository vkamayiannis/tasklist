<h1><%= t(:listing) + ' ' + Event.model_name.human(count: 2)  %></h1>
<%= link_to "EN", :locale=>'en' %>|<%= link_to "GR", :locale=>'gr' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t :title %></th>
      <th><%= t :description %></th>
      <th><%= t :started %></th>
      <th><%= t :finished %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.started %></td>
        <td><%= event.finished %></td>
        <td><%= link_to t(:show), event %></td>
        <td><%= link_to t(:edit), edit_event_path(event) %></td>
        <td><%= link_to t(:delete), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_event), new_event_path, class: "btn btn-primary" %>
